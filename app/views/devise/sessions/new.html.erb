<div id="page_wrapper">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
   <div class="form_group"> <%= f.label :email %><br>
		<%= f.email_field :email, autofocus: true %> </div>
   	 <br>
     <div class="form_group"><%= f.label :password %><br> <%= f.password_field :password, required: false %></div>
    	<br>
     <div class="form_group"><%if devise_mapping.rememberable?%>
     <%= f.check_box :remember_me %><%= f.label :remember_me%>
     	<%end%>
     </div>
  </div>
  <br>
  <div class="form-actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<br>
<%= render "devise/shared/links" %>

</div>