<div id="page_wrapper"> <h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-inputs">
      <div class="form_group"> <%= f.label :name %><br>
    <%= f.text_field :name, required: true, autofocus: true %> </div>
       <br>

    	<div class="form_group"> <%= f.label :email %><br>
		<%= f.email_field :email, required: true, autofocus: true %> </div>
   		 <br>
     		<div class="form_group"><%= f.label :password %><br> <%= f.password_field :password, required: true, hint: ( "#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    	 </div>
       <br>
     	<div class="form_group"><%= f.label :password_confirmation %><br> <%= f.password_field :password_confirmation, required: true %>
     	</div>
     </div>
     <br>
  <div class="form-actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>

</div>