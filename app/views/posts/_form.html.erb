
<%= form_for (@post) do |f| %>

	<% if @post.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@post.errors.count, "error")%> prevented this post from saving </h2>
			<ul>
				<%@post.errors.full_messages.each do |msg| %>
					<li><%=msg%></li>
				<%end%>
			</ul>
		</div>
	<%end%>
	<p>	
		<div class="form_group"> <%= f.label :title %><br>
		<%= f.text_field :title %> </div>
	</p><br>
	<p> 
		<div class="form_group"> <%= f.label :body %><br>
		<%= f.text_area :body %>
		 </div>
	</p><br>
	<p>
		<%= f.button :submit, class: "button" %>
	</p>


<% end %>

