<%= form_for (@group) do |f| %>

	<% if @group.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@group.errors.count, "error")%> prevented this group from creating </h2>
			<ul>
				<%@group.errors.full_messages.each do |msg| %>
					<li><%=msg%></li>
				<%end%>
			</ul>
		</div>
	<%end%>
	<p> 
		<div class="form_group"> <%= f.label :name %><br>
		<%= f.text_field :name %> </div>
	</p><br>
	<p>
		<%= f.button :submit, class: "button" %>
	</p>
<% end %>